<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:paddingTop="0dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        >

        <ImageView
            android:id="@+id/Timetable_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/classroom"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:text="CLASSROOM"
            android:textColor="@color/secondary_text"
            android:textSize="30sp"
            android:layout_marginLeft="15dp"
            android:letterSpacing="0.150"
            android:textFontWeight="600"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/classroom_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classroom ID"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary_text"
            android:paddingTop="15dp"
            android:layout_marginLeft="60dp"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="62dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/classroom_id_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter Classroom ID"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp" />


        </RelativeLayout>


        <TextView
            android:id="@+id/seats_classroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number Of Seats"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary_text"
            android:paddingTop="15dp"
            android:layout_marginLeft="60dp"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="62dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/number_seats_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="Number Of Seats"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp"
                />


        </RelativeLayout>

        <TextView
            android:id="@+id/floor_number_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Floor Number"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary_text"
            android:paddingTop="15dp"
            android:layout_marginLeft="60dp"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="62dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/floor_number_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter Floor Number"
                android:inputType="datetime"
                android:maxLines="1"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp"
                />


        </RelativeLayout>

        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="18.7dp"
            android:layout_marginRight="62dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="Add Classroom"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="true"/>


    </LinearLayout>

</LinearLayout>